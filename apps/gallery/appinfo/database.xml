		<declaration>
			<field>
				<name>album_id</name>
				<type>integer</type>
				<default>0</default>
			    <notnull>true</notnull>
    			<autoincrement>1</autoincrement>
			    <length>4</length>
			</field>
			<field>
				<name>uid_owner</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>album_name</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>100</length>
			</field>
      <field>
        <name>album_path</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>100</length>
      </field>
		</declaration>
	</table>
	<table>
		<name>*dbprefix*gallery_photos</name>
		<declaration>
			<field>
				<name>photo_id</name>
				<type>integer</type>
				<default>0</default>
			    <notnull>true</notnull>
			    <autoincrement>1</autoincrement>
			    <length>4</length>
			</field>
			<field>
				<name>album_id</name>
				<type>integer</type>
				<default>0</default>
			    <notnull>true</notnull>
			    <length>4</length>
			</field>
			<field>
				<name>file_path</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>100</length>
			</field>
		</declaration>
	</table>
</database>
